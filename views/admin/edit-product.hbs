<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <h3>Edit product</h3>

                {{#with productDetails}}
                <form action="/admin/edit-product/{{this._id}}" method="POST" enctype="multipart/form-data">

                    <label for="title" class="col-sm-2 col-form-label">Title</label>
                    <input type="text" class="form-control" name="title" id="title" value="{{this.title}}">

                    <label for="category" class="col-sm-2 col-form-label">Category</label>
                    <input type="text" class="form-control" name="category" id="category" value="{{this.category}}">

                    <label for="description" class="col-sm-2 col-form-label">Description</label>
                    <input type="text" class="form-control" name="description" id="description"
                        value="{{this.description}}">

                    <label for="price" class="col-sm-2 col-form-label">Price</label>
                    <input type="number" class="form-control" name="price" id="price" value="{{this.price}}">

                    <label for="image" class="col-sm-2 col-form-label">Image</label>
                    <img src="/images/product-images/{{this._id}}.jpg" id="imgView"style="width: 150px;" alt="{{this.title}} image">
                    <input type="file" class="form-control" name="image" id="image" onchange="changePreview(event)">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </form>
                {{/with}}

            </div>
        </div>
    </div>

    <script>
        function changePreview(event) {
            var preview = document.getElementById('imgView');
            preview.src = URL.createObjectURL(event.target.files[0])
        }
    </script>
</section>