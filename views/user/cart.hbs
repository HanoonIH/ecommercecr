<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8  my-5">
                <h3>Your cart</h3>
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            {{!-- <th scope="col">#</th> --}}
                            <th scope="col">Image</th>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            {{!-- <th scope="row">{{this._id}}</th> --}}
                            <td>
                                <img src="/images/product-images/{{this._id}}.jpg" style="width: 50px;" alt="">
                            </td>
                            <td>{{this.title}}</td>
                            <td>{{this.price}}</td>
                            <td>{{this.description}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>